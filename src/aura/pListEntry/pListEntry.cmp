<aura:component >
  <aura:attribute name="project" type="Project__c" />

  <aura:registerEvent name="showDetails" type="c:projectDetailsEvent" />

  <lightning:card >
        <aura:set attribute="title" value="{!v.project.Name}">
        </aura:set>
        <aura:set attribute="footer">
            <lightning:button label="Details" onclick="{!c.handleDetailsClick}"/>
        </aura:set>
        <aura:set attribute="actions" value="{!v.project.Status__c}">
        </aura:set>
        <p class="slds-p-horizontal--small">
            "{!v.project.OwnerId}"
        </p>
    </lightning:card>
</aura:component>
